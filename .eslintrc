{
  "parser": "babel-eslint",

  "root": true,

  "extends": [
    "./node_modules/eslint-config.xyz/targets/react",
  ],

  "ignorePatterns": ["dist/*.js"],

  "globals": {
    // Access build time env vars
    "process": true,

    // Import packages
    "require": true,

    "module": true
  },

  // App specific rules
  "rules": {
    "new-cap": "off",
  },

  "settings": {
    "react": {
      "version": "detect",
    },

    // Recommended if you use eslint_d
    "import/cache": {
      "lifetime": 5,
    },

    // Can add a path segment here that will act like a source root, for
    // in-project aliasing (i.e. `import MyStore from 'stores/my-store'`)
    "import/resolver": {
      parcel: {
        "rootDir": "src",
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
